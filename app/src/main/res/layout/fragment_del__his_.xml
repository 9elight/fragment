<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Del_His_Fragment">


    <Button
        android:id="@+id/delete"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="c"
        android:textColor="@android:color/white"
        android:background="@color/calcColor3"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText"/>
    <Button
        android:id="@+id/history"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:background="@color/calcColor2"
        android:textColor="@color/calcColor3"
        android:text="History"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@+id/delete"
        app:layout_constraintTop_toTopOf="@id/delete"
        android:onClick="openHistoryList"/>

</androidx.constraintlayout.widget.ConstraintLayout>